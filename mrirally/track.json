{
  "version": 2,
  "description": "Mocked MRI Data",
  "indices": [
    {
      "name": "mockmri",
      "body": "index.json"
    }
  ],
  "corpora": [
    {
      "name": "mockmri-corpus",
      "documents": [
        {
          "source-file": "data.json",
          "document-count": 10000,
          "uncompressed-bytes": 16078005
        }
      ]
    }
  ],
    "schedule": [
    {
      "operation": {
        "operation-type": "delete-index"
      }
    },
    {
      "operation": {
        "operation-type": "create-index"
      }
    },
    {
      "operation": {
        "operation-type": "cluster-health",
        "request-params": {
          "wait_for_status": "green"
        },
        "retry-until-success": true
      }
    },
     {
      "operation": {
        "operation-type": "bulk",
        "bulk-size": 5000
      },
      "warmup-time-period": 120,
      "clients": 8
    }
    ]
}
